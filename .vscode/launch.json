//"preLaunchTask": "build",
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension dist-Code",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: esbuild"
    }
  ]
}